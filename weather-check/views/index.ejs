<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Weather Check</title>
    <link rel="stylesheet" type="text/css" href="/css/style.css">
    <link href='https://fonts.googleapis.com/css?family=Arima+Madurai:300' rel='stylesheet' type='text/css'>
  </head>
  <body>
    <div class="container">
      <div style="width: 100%; text-align: center;">
        <div class="heading"><b>SKY GAZER</b></div>
        <div class="weather-form">
          <form action="/" method="post">
            <div>
              <input name="city" type="text" class="ghost-input" placeholder="Enter a City" autocomplete="false" required>
            </div>
            <div class="button-wrapper">
              <button class="button" type="submit">
                GET WEATHER DATA
                <div class="button__horizontal"></div>
                <div class="button__vertical"></div>
              </button>
            </div>
          </form>
          <div class="error-block">
            <% if(typeof error != "undefined"){ %>
              <p><%= error %></p>
            <% } %>      
          </div>
        </div>
      </div>
    </div>
  </body>
</html>